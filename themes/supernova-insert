# This tmux statusbar config was created by mdx-tmux-theme.vim
# on Sat, 07 Aug 2021

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#e4e4e4,bg=#242e33"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#e4e4e4"
set -g status-style "none,bg=#1D2529"
set -g message-style "fg=#e4e4e4,bg=#242e33"
set -g pane-border-style "fg=#242e33"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator " "
setw -g window-status-style "none,fg=#eeeeee,bg=#1D2529"
set -g status-left "#[fg=#585858,bg=#e4e4e4] #S #[fg=#e4e4e4,bg=#1D2529,nobold,nounderscore,noitalics]#[fg=#eeeeee,bg=#1D2529] %H:%M "
set -g status-right "#[fg=#eeeeee,bg=#1D2529] %d %b #[fg=#e4e4e4,bg=#1D2529,nobold,nounderscore,noitalics]#[fg=#585858,bg=#e4e4e4] #h "
setw -g window-status-format "#[fg=#eeeeee,bg=#1D2529] #I │ #W "
setw -g window-status-current-format "#[fg=#1D2529,bg=#242e33,nobold,nounderscore,noitalics]#[fg=#e4e4e4,bg=#242e33] #I  #W  #P #[fg=#1D2529,bg=#242e33,nobold,nounderscore,noitalics]"

set -g @mdx-tmux-theme supernova-insert
